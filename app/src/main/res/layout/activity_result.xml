<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/tchr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="ChallengerName"
        android:fontFamily="@font/caesar_dressing"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/tchd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="ChallengedName"
        android:fontFamily="@font/caesar_dressing"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/t_chrscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:layout_below="@id/tchr"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/caesar_dressing"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginStart="32dp"/>
    <TextView
        android:id="@+id/t_chdscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:layout_below="@id/tchd"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/caesar_dressing"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginEnd="32dp"/>
    <TextView
        android:id="@+id/tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winner : XYZ"
        android:layout_centerInParent="true"
        android:fontFamily="@font/caesar_dressing"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp"/>
    <EditText
        android:id="@+id/t_oppo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="opponent"
        android:layout_above="@id/buttons"/>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2">
        <Button
            android:id="@+id/b_addfr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD FRIEND"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:fontFamily="@font/caesar_dressing"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/b_dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:fontFamily="@font/caesar_dressing"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>