<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatchAndMatch.CompleteYourProfile">


    <TextView
        android:id="@+id/title"
        android:textSize="16dp"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/holo_green_dark"
        android:layout_centerHorizontal="true"
        android:text="Please Complete Your Profile" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/gamerimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/title"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"/>
    <android.support.v7.widget.CardView
        android:id="@+id/namecardview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/gamerimage"
         android:layout_margin="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nametextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Name"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nametextview"
                android:textColor="@color/colorPrimaryDark" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/emailcardview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/namecardview"
        android:layout_margin="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/emailtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Emal"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:layout_margin="8dp"
                android:textSize="16dp"
                android:id="@+id/email"
                android:text="parasmynamee@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailtextview"
                android:textColor="@color/colorPrimaryDark" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/buttoncardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailcardview"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp">

        <TextView
            android:id="@+id/login"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:background="@drawable/buttonstyle"
            android:padding="10dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>

</RelativeLayout>